@model GameSource.ViewModels.PlatformViewModel.PlatformEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Edit Platform</h1>

<hr />
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Platform.ID" />
                <div class="form-group">
                    <label asp-for="Platform.Name" class="control-label"></label>
                    <input asp-for="Platform.Name" class="form-control" />
                    <span asp-validation-for="Platform.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Platform.PlatformType" class="control-label"></label>
                    <select asp-for="Platform.PlatformTypeID" asp-items="@Model.PlatformTypes" class="form-control">
                        <option value="">Select a Platform/Platforms</option>
                    </select>
                    <span asp-validation-for="Platform.PlatformType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save changes" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to Index</a>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}