@model GameSource.ViewModels.GameSource.PlatformViewModel.PlatformDetailsViewModel

@{
    ViewData["Title"] = Model.Platform.Name;
}

<div class="details-page page-content">
    <div class="row justify-content-center">
        <div class="col-4">
            <div class="page-heading">Platform</div>
            <div class="page-sub-heading">@Model.Platform.Name</div>
            <hr />
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-4">
            <label asp-for="Platform.ID" class="control-label font-weight-bold"></label>
            <p>@Model.Platform.ID</p>
            <label asp-for="Platform.Name" class="control-label font-weight-bold"></label>
            <p>@Model.Platform.Name</p>
            <label asp-for="Platform.PlatformType" class="control-label font-weight-bold"></label>
            <p>@Model.PlatformType.Name</p>
            <hr />
            <div class="link-section">
                <a class="btn btn-primary index-link" asp-action="Index">Back to Index</a>
            </div>
        </div>
    </div>
</div>