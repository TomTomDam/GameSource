@model GameSource.ViewModels.GameSource.PlatformViewModel.PlatformDeleteViewModel

@{
    ViewData["Title"] = "Delete " + Model.Platform.Name;
}

<div class="delete-page page-content">
    <div class="row justify-content-center">
        <div class="col-4">
            <div class="page-heading">Delete</div>
            <hr />
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-4">
            <p class="text-center">Are you sure you want to delete this Platform?</p>
        </div>
    </div>
    <form asp-action="Delete">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Platform.ID" />
        <div class="row justify-content-center text-left">
            <div class="col-2">
                <label asp-for="Platform.ID" class="control-label font-weight-bold"></label>
            </div>
            <div class="col-2">
                <div>@Model.Platform.ID</div>
            </div>
        </div>
        <div class="row justify-content-center text-left">
            <div class="col-2">
                <label asp-for="Platform.Name" class="control-label font-weight-bold"></label>
            </div>
            <div class="col-2">
                <div>@Model.Platform.Name</div>
            </div>
        </div>
        <div class="row justify-content-center text-left">
            <div class="col-2">
                <label asp-for="Platform.PlatformType" class="control-label font-weight-bold"></label>
            </div>
            <div class="col-2">
                <div>@Model.PlatformType.Name</div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-4">
                <hr />
                <div class="link-section">
                    <div class="form-group">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a class="btn btn-primary index-link" asp-action="Index">Back to Index</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>