@model GameSource.ViewModels.GameSource.PlatformViewModel.PlatformDeleteViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<div class="container">
    <div class="row">
        <form asp-action="Delete">
            <p>Are you sure you want to delete this Platform?</p>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Platform.ID" />
            <div class="form-group">
                <label asp-for="Platform.Name" class="control-label font-weight-bold"></label>
                <p>@Model.Platform.Name</p>
            </div>
            <div class="form-group">
                <label asp-for="Platform.PlatformType" class="control-label font-weight-bold"></label>
                <p>@Model.PlatformType.Name</p>
            </div>
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <div>
        <a asp-action="Index">Back to Index</a>
    </div>
</div>