@model GameSource.ViewModels.GameSource.PlatformViewModel.PlatformCreateViewModel

@{
    ViewData["Title"] = "Add a new Platform";
}

<h1 class="text-center">Add a new Platform</h1>
<hr />

<div class="container">
    <div class="row">
        <form asp-action="Create" method="post" class="dialog-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Platform.ID" />
            <div class="form-group">
                <label asp-for="Platform.Name" class="control-label dialog-label"></label>
                <input asp-for="Platform.Name" class="form-control dialog-input dialog-input-base" />
                <span asp-validation-for="Platform.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Platform.PlatformType" class="control-label dialog-label"></label>
                <select asp-for="Platform.PlatformTypeID" asp-items="@Model.PlatformTypes" class="form-control dialog-input dialog-input-base">
                    <option value="">Select a Platform Type</option>
                </select>
                <span asp-validation-for="Platform.PlatformType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <div class="row">
        <a asp-action="Index">Back to Index</a>
    </div>
</div>