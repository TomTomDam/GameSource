@model GameSource.ViewModels.GameSource.ReviewViewModel.ReviewDeleteViewModel

@{
    ViewData["Title"] = "Delete Review";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="delete-page page-content">
    <div class="row justify-content-center">
        <div class="col-4">
            <div class="page-heading">Delete</div>
            <hr />
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-4">
            <p class="text-center">Are you sure you want to delete this Review?</p>
        </div>
    </div>
    <form asp-action="Delete">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Review.ID" />
        <div class="row justify-content-center text-left">
            <div class="col-2">
                <label asp-for="Review.ID" class="control-label font-weight-bold"></label>
            </div>
            <div class="col-2">
                <div>@Model.Review.ID</div>
            </div>
        </div>
        <div class="row justify-content-center text-left">
            <div class="col-2">
                <label asp-for="Review.Title" class="control-label font-weight-bold"></label>
            </div>
            <div class="col-2">
                <div>@Model.Review.Title</div>
            </div>
        </div>
        <div class="row justify-content-center text-left">
            <div class="col-2">
                <label asp-for="Review.DateCreated" class="control-label font-weight-bold"></label>
            </div>
            <div class="col-2">
                <div>@Model.Review.DateCreated</div>
            </div>
        </div>
        <div class="row justify-content-center text-left">
            <div class="col-2">
                <label asp-for="Review.Rating" class="control-label font-weight-bold"></label>
            </div>
            <div class="col-2">
                <div>@Model.Review.Rating</div>
            </div>
        </div>
        <div class="row justify-content-center text-left">
            <div class="col-2">
                <label asp-for="Review.Body" class="control-label font-weight-bold"></label>
            </div>
            <div class="col-2">
                <div>@Html.Raw(Model.Review.Body)</div>
            </div>
        </div>
        @*<div class="row justify-content-center text-left">
            <div class="col-2">
                <label asp-for="Review.ReviewComments" class="control-label font-weight-bold"></label>
            </div>
            <div class="col-2">
                <div>@Model.Review.ReviewComments</div>
            </div>
        </div>*@
        <div class="row justify-content-center">
            <div class="col-4">
                <hr />
                <div class="link-section">
                    <div class="form-group">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a class="btn btn-primary index-link" asp-action="Index">Back to Index</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

