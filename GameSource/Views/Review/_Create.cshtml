@model GameSource.ViewModels.GameSource.ReviewViewModel.ReviewCreateViewModel

<div id="create-review">
    <div class="row justify-content-center text-left">
        <div class="col-4">
            <div class="page-heading">Add a new Review</div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-4">
            <form asp-action="Create" method="post" class="dialog-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Review.ID" />
                <input type="hidden" asp-for="User.Id"/>
                <div class="form-group">
                    <label asp-for="Review.Title" class="control-label dialog-label"></label>
                    <input asp-for="Review.Title" class="form-control dialog-input dialog-input-base" id="create-review-title-input" />
                    <span asp-validation-for="Review.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Review.Body" class="control-label dialog-label"></label>
                    <input asp-for="Review.Body" class="form-control dialog-input dialog-input-base" id="create-review-body-input" />
                    <span asp-validation-for="Review.Body" class="text-danger"></span>
                </div>
                <div class="link-section">
                    <div class="form-group">
                        <input type="submit" value="Submit Review" class="btn btn-primary" id="create-review-btn" />
                        <a class="btn btn-primary index-link" asp-action="Index">Back to Index</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>