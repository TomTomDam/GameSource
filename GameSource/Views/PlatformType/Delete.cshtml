@model GameSource.ViewModels.GameSource.PlatformTypeViewModel.PlatformTypeDeleteViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center">Delete</h1>
<hr />

<div class="container">
    <div class="row">
        <form asp-action="Delete">
            <p>Are you sure you want to delete this Platform Type?</p>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PlatformType.ID" />
            <div class="form-group">
                <label asp-for="PlatformType.Name" class="control-label font-weight-bold"></label>
                <p>@Model.PlatformType.Name</p>
            </div>
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <div class="row">
        <a asp-action="Index">Back to Index</a>
    </div>
</div>