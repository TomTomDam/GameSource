@model GameSource.ViewModels.GameSource.PlatformTypeViewModel.PlatformTypeDeleteViewModel

@{
    ViewData["Title"] = "Delete " + Model.PlatformType.Name;
}

<div class="container delete-page page-content">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="page-heading">Delete</div>
            <hr />
            <form asp-action="Delete">
                <p>Are you sure you want to delete this Platform Type?</p>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="PlatformType.ID" />
                <div class="form-group">
                    <label asp-for="PlatformType.ID" class="control-label font-weight-bold"></label>
                    <p>@Model.PlatformType.ID</p>
                </div>
                <div class="form-group">
                    <label asp-for="PlatformType.Name" class="control-label font-weight-bold"></label>
                    <p>@Model.PlatformType.Name</p>
                </div>
            </form>
            <hr />
            <div class="link-section">
                <div class="form-group">
                    <input type="submit" value="Delete" class="btn btn-primary" />
                    <a class="btn btn-primary index-link" asp-action="Index">Back to Index</a>
                </div>
            </div>
        </div>
    </div>
</div>