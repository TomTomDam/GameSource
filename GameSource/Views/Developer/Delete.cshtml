@model GameSource.ViewModels.GameSource.DeveloperViewModel.DeveloperDeleteViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container delete-page page-content">
    <div class="row">
        <div class="col-md-5">
            <div class="page-heading">Delete</div>
            <hr />
            <form asp-action="Delete">
                <p>Are you sure you want to delete this Developer?</p>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Developer.ID" />
                <div class="form-group">
                    <label asp-for="Developer.Name" class="control-label font-weight-bold"></label>
                    <p>@Model.Developer.Name</p>
                </div>
                <div class="form-group">
                    <input type="submit" value="Delete" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        <a asp-action="Index">Back to Index</a>
    </div>
</div>