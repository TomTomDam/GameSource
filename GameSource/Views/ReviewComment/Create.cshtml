@model GameSource.ViewModels.GameSource.ReviewCommentViewModel.ReviewCommentCreateViewModel

@{
    ViewData["Title"] = "Write a Review Comment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="create-page page-content">
    <div class="row justify-content-center">
        <div class="col-4">
            <div class="page-heading">Add a new Review</div>
            <hr />
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-4">
            <form asp-action="Create" method="post" class="dialog-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ReviewComment.ID" />
                <div class="form-group">
                    <label asp-for="ReviewComment.Body" class="control-label dialog-label"></label>
                    <input asp-for="ReviewComment.Body" class="form-control dialog-input dialog-input-base" />
                    <span asp-validation-for="ReviewComment.Body" class="text-danger"></span>
                </div>
                <div class="link-section">
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                        <a class="btn btn-primary index-link" asp-action="Index">Back to Index</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>