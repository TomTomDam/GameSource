@model GameSource.ViewModels.GameSource.ReviewCommentViewModel.ReviewCommentDeleteViewModel

@{
    ViewData["Title"] = "Delete Review  Comment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="delete-page page-content">
    <div class="row justify-content-center">
        <div class="col-4">
            <div class="page-heading">Delete</div>
            <hr />
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-4">
            <p class="text-center">Are you sure you want to delete this Review Comment?</p>
        </div>
    </div>
    <form asp-action="Delete">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ReviewComment.ID" />
        <div class="row justify-content-center text-left">
            <div class="col-2">
                <label asp-for="ReviewComment.ID" class="control-label font-weight-bold"></label>
            </div>
            <div class="col-2">
                <div>@Model.ReviewComment.ID</div>
            </div>
        </div>
        <div class="row justify-content-center text-left">
            <div class="col-2">
                <label asp-for="ReviewComment.DateCreated" class="control-label font-weight-bold"></label>
            </div>
            <div class="col-2">
                <div>@Model.ReviewComment.DateCreated</div>
            </div>
        </div>
        <div class="row justify-content-center text-left">
            <div class="col-2">
                <label asp-for="ReviewComment.Body" class="control-label font-weight-bold"></label>
            </div>
            <div class="col-2">
                <div>@Html.Raw(Model.ReviewComment.Body)</div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-4">
                <hr />
                <div class="link-section">
                    <div class="form-group">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a class="btn btn-primary index-link" asp-action="Index">Back to Index</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>