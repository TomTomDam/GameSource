@model GameSource.ViewModels.GameSource.GenreViewModel.GenreIndexViewModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Index</h1>

<div class="container">
    <p>
        <a class="btn btn-primary" asp-controller="Genre" asp-action="Create">Add a new Genre</a>
    </p>

    <table class="table" id="genreIndexTable">
        <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var genre in Model.Genres)
            {
                <tr>
                    <td>@genre.Name</td>
                    <td>
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@genre.ID">View</a>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@genre.ID">Edit</a>
                        <a class="btn btn-primary" asp-action="Delete" asp-route-id="@genre.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts {
    <script src="~/js/index-datatables.js"></script>
}