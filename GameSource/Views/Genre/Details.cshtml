@model GameSource.ViewModels.GameSource.GenreViewModel.GenreDetailsViewModel

@{
    ViewData["Title"] = Model.Genre.Name;
}

<div class="details-page page-content">
    <div class="row justify-content-center">
        <div class="col-4">
            <div class="page-heading">Genre</div>
            <div class="page-sub-heading">@Model.Genre.Name</div>
            <hr />
        </div>
    </div>
    <div class="row justify-content-center text-left">
        <div class="col-2">
            <label asp-for="Genre.ID" class="control-label font-weight-bold"></label>
        </div>
        <div class="col-2">
            <div>@Model.Genre.ID</div>
        </div>
    </div>
    <div class="row justify-content-center text-left">
        <div class="col-2">
            <label asp-for="Genre.Name" class="control-label font-weight-bold"></label>
        </div>
        <div class="col-2">
            <div>@Model.Genre.Name</div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-4">
            <hr />
            <div class="link-section">
                <a class="btn btn-primary index-link" asp-action="Index">Back to Index</a>
            </div>
        </div>
    </div>
</div>