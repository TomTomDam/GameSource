@model GameSource.ViewModels.GameSource.NewsArticleViewModel.NewsArticleCreateViewModel

@{
    ViewData["Title"] = "Create a new News Article";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Create a new News Article</h1>

<div class="container">
    <div class="row">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="NewsArticle.ID" />
            <div class="form-group">
                <label asp-for="NewsArticle.Title" class="control-label"></label>
                <input asp-for="NewsArticle.Title" class="form-control" />
                <span asp-validation-for="NewsArticle.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewsArticle.Body" class="control-label"></label>
                <input asp-for="NewsArticle.Body" class="form-control" />
                <span asp-validation-for="NewsArticle.Body" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <div>
        <a asp-action="Index">Back to Index</a>
    </div>
</div>