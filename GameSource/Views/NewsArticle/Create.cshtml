@model GameSource.ViewModels.GameSource.NewsArticleViewModel.NewsArticleCreateViewModel

@{
    ViewData["Title"] = "Create a new News Article";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Create a new News Article</h1>

<hr />
<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="NewsArticle.ID" />
                <div class="form-group">
                    <label asp-for="NewsArticle.Title" class="control-label"></label>
                    <input asp-for="NewsArticle.Title" class="form-control" id="news-article-create-title" />
                    <span asp-validation-for="NewsArticle.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NewsArticle.Body" class="control-label"></label>
                    <textarea asp-for="NewsArticle.Body" class="form-control resizable-input news-article-textarea" oninput="autoGrow(this)"></textarea>
                    <span asp-validation-for="NewsArticle.Body" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <a asp-action="Index">Back to Index</a>
        </div>
    </div>
</div>

@section scripts {
    <script>
        function autoGrow(element) {
            element.style.height = "5px";
            element.style.height = (element.scrollHeight) + "px";
        };
    </script>
}