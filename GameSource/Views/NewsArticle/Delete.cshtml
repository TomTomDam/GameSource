@model GameSource.ViewModels.GameSource.NewsArticleViewModel.NewsArticleDeleteViewModel

@{
    ViewData["Title"] = "Delete " + Model.NewsArticle.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="delete-page page-content">
    <div class="row justify-content-center">
        <div class="col-8">
            <div class="page-heading">Delete</div>
            <hr />
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-8">
            <form asp-action="Delete">
                <p class="text-center">Are you sure you want to delete this News Article?</p>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="NewsArticle.ID" />
                <div class="form-group">
                    <label asp-for="NewsArticle.Title" class="control-label font-weight-bold"></label>
                    <p>@Model.NewsArticle.Title</p>

                    <label asp-for="NewsArticle.CreatedBy" class="control-label font-weight-bold"></label>
                    <p>@Model.NewsArticle.CreatedBy</p>

                    <label asp-for="NewsArticle.DateCreated" class="control-label font-weight-bold"></label>
                    <p>@Model.NewsArticle.DateCreated</p>

                    <label asp-for="NewsArticle.DateModified" class="control-label font-weight-bold"></label>
                    <p>@Model.NewsArticle.DateModified</p>
                </div>
                <div class="form-group">
                    <label asp-for="NewsArticle.Body" class="control-label font-weight-bold"></label>
                    <p>@Model.NewsArticle.Body</p>
                </div>
                <hr />
                <div class="link-section">
                    <div class="form-group">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a class="btn btn-primary index-link" asp-action="Index">Back to Index</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>