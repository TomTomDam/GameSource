@model GameSource.ViewModels.GameSource.NewsArticleViewModel.NewsArticleDeleteViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<div class="container">
    <div class="row">
        <form asp-action="Delete">
            <p>Are you sure you want to delete this News Article?</p>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="NewsArticle.ID" />
            <div class="form-group">
                <label asp-for="NewsArticle.Title" class="control-label font-weight-bold"></label>
                <p>@Model.NewsArticle.Title</p>
            </div>
            <div class="form-group">
                <label asp-for="NewsArticle.Body" class="control-label font-weight-bold"></label>
                <p>@Model.NewsArticle.Body</p>
            </div>
            <div class="form-group">
                <label asp-for="NewsArticle.AuthoredBy" class="control-label font-weight-bold"></label>
                <p>@Model.NewsArticle.AuthoredBy</p>
            </div>
            <div class="form-group">
                <label asp-for="NewsArticle.DateCreated" class="control-label font-weight-bold"></label>
                <p>@Model.NewsArticle.DateCreated</p>
            </div>
            <div class="form-group">
                <label asp-for="NewsArticle.DateModified" class="control-label font-weight-bold"></label>
                <p>@Model.NewsArticle.DateModified</p>
            </div>
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <div>
        <a asp-action="Index">Back to Index</a>
    </div>
</div>