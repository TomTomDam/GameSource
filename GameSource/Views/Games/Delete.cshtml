@model GameSource.ViewModels.GameViewModel.GameDeleteViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<div class="container">
    <div class="row">
        <form asp-action="Delete">
            <p>Are you sure you want to delete this Game?</p>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Game.ID" />
            <div class="form-group">
                <label asp-for="Game.Name" class="control-label font-weight-bold"></label>
                <p>@Model.Game.Name</p>
            </div>
            <div class="form-group">
                <label asp-for="Game.Description" class="control-label font-weight-bold"></label>
                <p>@Model.Game.Description</p>
            </div>
            <div class="form-group">
                <label asp-for="Game.Genre" class="control-label font-weight-bold"></label>
                <p>@Model.Game.Genre.Name</p>
            </div>
            <div class="form-group">
                <label asp-for="Game.Developer" class="control-label font-weight-bold"></label>
                <p>@Model.Game.Developer.Name</p>
            </div>
            <div class="form-group">
                <label asp-for="Game.Publisher" class="control-label font-weight-bold"></label>
                <p>@Model.Game.Publisher.Name</p>
            </div>
            <div class="form-group">
                <label asp-for="Game.Platform" class="control-label font-weight-bold"></label>
                <p>@Model.Game.Platform.Name</p>
            </div>
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <div>
        <a asp-action="Index">Back to Index</a>
    </div>
</div>