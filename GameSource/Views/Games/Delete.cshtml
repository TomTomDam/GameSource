@model GameSource.ViewModels.GameSource.GameViewModel.GameDeleteViewModel

@{
    ViewData["Title"] = "Delete " + Model.Game.Name;

    var coverImageFilePath = "~/images/Game/CoverImage/" + (Model.Game.CoverImageFilePath ?? "default_game_cover_image.png");
}

<div class="delete-page page-content">
    <div class="row justify-content-center">
        <div class="col-4">
            <div class="page-heading">Delete</div>
            <hr />
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-4">
            <p class="text-center">Are you sure you want to delete this Game?</p>
        </div>
    </div>
    <form asp-action="Delete">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Game.ID" />
        <div class="row justify-content-center">
            <img class="game-cover-image" src="@coverImageFilePath" asp-append-version="true" />
        </div>
        <div class="row justify-content-center text-left">
            <div class="col-2">
                <label asp-for="Game.ID" class="control-label font-weight-bold"></label>
            </div>
            <div class="col-2">
                <div>@Model.Game.ID</div>
            </div>
        </div>
        <div class="row justify-content-center text-left">
            <div class="col-2">
                <label asp-for="Game.Name" class="control-label font-weight-bold"></label>
            </div>
            <div class="col-2">
                <div>@Model.Game.Name</div>
            </div>
        </div>
        <div class="row justify-content-center text-left">
            <div class="col-2">
                <label asp-for="Game.Genre" class="control-label font-weight-bold"></label>
            </div>
            <div class="col-2">
                <div>@Model.Genre.Name</div>
            </div>
        </div>
        <div class="row justify-content-center text-left">
            <div class="col-2">
                <label asp-for="Game.Developer" class="control-label font-weight-bold"></label>
            </div>
            <div class="col-2">
                <div>@Model.Developer.Name</div>
            </div>
        </div>
        <div class="row justify-content-center text-left">
            <div class="col-2">
                <label asp-for="Game.Publisher" class="control-label font-weight-bold"></label>
            </div>
            <div class="col-2">
                <div>@Model.Publisher.Name</div>
            </div>
        </div>
        <div class="row justify-content-center text-left">
            <div class="col-2">
                <label asp-for="Game.Platform" class="control-label font-weight-bold"></label>
            </div>
            <div class="col-2">
                <div>@Model.Platform.Name</div>
            </div>
        </div>
        <div class="row justify-content-center text-left">
            <div class="col-2">
                <label asp-for="Game.Description" class="control-label font-weight-bold"></label>
            </div>
            <div class="col-2">
                <div>@Model.Game.Description</div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-4">
                <hr />
                <div class="link-section">
                    <div class="form-group">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a class="btn btn-primary index-link" asp-action="Index">Back to Index</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>