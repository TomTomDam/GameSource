@model IEnumerable<GameSource.Models.Game>


@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Index</h1>

<a class="btn btn-primary" asp-controller="Games" asp-action="Create">Add a new Game</a>
<a class="btn btn-primary" asp-controller="Genre" asp-action="Create">Add a new Genre</a>
<a class="btn btn-primary" asp-controller="Developer" asp-action="Create">Add a new Developer</a>
<a class="btn btn-primary" asp-controller="Publisher" asp-action="Create">Add a new Publisher</a>
<a class="btn btn-primary" asp-controller="Platform" asp-action="Create">Add a new Platform</a>

<div class="container">
    <table class="table table-bordered table-responsive">
        <thead>
            <tr>
                <th>Name</th>
                <th>Genre</th>
                <th>Developer</th>
                <th>Publisher</th>
                <th>Description</th>
                <th>Platforms</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var game in Model)
            {
                <tr>
                    <td>@game.Name</td>
                    <td>@game.Genre</td>
                    <td>@game.Developer</td>
                    <td>@game.Publisher</td>
                    <td>@game.Description</td>
                    <td>@game.Platform</td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Games" asp-action="Details" asp-route-id="@game.Game_ID">View</a>
                        <a class="btn btn-primary" asp-controller="Games" asp-action="Update" asp-route-id="@game.Game_ID">Edit</a>
                        <a class="btn btn-primary" asp-controller="Games" asp-action="Delete" asp-route-id="@game.Game_ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

