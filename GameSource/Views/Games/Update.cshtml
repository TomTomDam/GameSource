@model GameSource.ViewModels.GameViewModel.GameUpdateViewModel

@{
    ViewData["Title"] = "Update";
}

<h1 class="text-center">Update Game information</h1>

<hr />
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form asp-controller="Games" asp-action="Update">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Game.ID" />
                <div class="form-group">
                    <label asp-for="Game.Name" class="control-label"></label>
                    <input asp-for="Game.Name" class="form-control" />
                    <span asp-validation-for="Game.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Game.Genre" class="control-label"></label>
                    <input asp-for="Game.Genre.Name" class="form-control" />
                    <span asp-validation-for="Game.Genre.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Game.Developer" class="control-label"></label>
                    <input asp-for="Game.Developer.Name" class="form-control" />
                    <span asp-validation-for="Game.Developer.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Game.Publisher" class="control-label"></label>
                    <input asp-for="Game.Publisher.Name" class="form-control" />
                    <span asp-validation-for="Game.Publisher.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Game.Description" class="control-label"></label>
                    <input asp-for="Game.Description" class="form-control" />
                    <span asp-validation-for="Game.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Game.Platform" class="control-label"></label>
                    <input asp-for="Game.Platform.Name" class="form-control" />
                    <span asp-validation-for="Game.Platform.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save changes" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to Index</a>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}