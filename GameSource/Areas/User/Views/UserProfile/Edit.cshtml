@model GameSource.Areas.User.ViewModels.UserProfileViewModel.UserProfileEditViewModel
@using Microsoft.AspNetCore.Identity;
@using GameSource.Models.GameSourceUser;
@inject SignInManager<User> signInManager;

@{
    ViewData["Title"] = "Edit your Profile";
}

<div class="page-heading text-dark text-bold"><span class="page-heading-username">@User.Identity.Name</span> > Edit Profile</div>
<hr />

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="UserProfile.ID" />
                <div class="form-group">
                    <label asp-for="UserProfile.Biography" class="control-label"></label>
                    <input asp-for="UserProfile.Biography" class="form-control" />
                    <span asp-validation-for="UserProfile.Biography" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save changes" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to Index</a>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}