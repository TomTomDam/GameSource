@model GameSource.Areas.GameSourceUser.ViewModels.UserProfileCommentViewModel.UserProfileCommentDeleteViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<div class="container">
    <div class="row">
        <form asp-action="Delete">
            <p>Are you sure you want to delete this Comment?</p>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserProfileComment.ID" />
            <div class="form-group">
                <label asp-for="UserProfileComment.UserProfile" class="control-label font-weight-bold"></label>
                <p>@Model.UserProfileComment.UserProfile</p>
            </div>
            <div class="form-group">
                <label asp-for="UserProfileComment.Body" class="control-label font-weight-bold"></label>
                <p>@Model.UserProfileComment.Body</p>
            </div>
            <div class="form-group">
                <label asp-for="UserProfileComment.DateCreated" class="control-label font-weight-bold"></label>
                <p>@Model.UserProfileComment.DateCreated</p>
            </div>
            <div class="form-group">
                <label asp-for="UserProfileComment.CreatedBy" class="control-label font-weight-bold"></label>
                <p>@Model.UserProfileComment.CreatedBy</p>
            </div>
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <div>
        <a asp-action="Index">Back to Index</a>
    </div>
</div>