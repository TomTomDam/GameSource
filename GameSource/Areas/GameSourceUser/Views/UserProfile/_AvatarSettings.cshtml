@model GameSource.Areas.GameSourceUser.ViewModels.UserProfileViewModel.UserProfileEditViewModel
@using Microsoft.AspNetCore.Identity;
@using GameSource.Models.GameSourceUser;
@inject SignInManager<User> signInManager;

@{
    ViewData["Title"] = "Edit Profile Avatar";
}

<div class="page-heading text-dark text-bold"><span class="page-heading-username">@User.Identity.Name</span> > Edit Profile</div>
<hr />

<div id="userprofile-avatar-settings">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <h2>Avatar</h2>
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="UserProfile.ID" />
                    <div class="form-group">
                        <label asp-for="UserProfile.AvatarFilePath" class="control-label"></label>
                        <input asp-for="UserProfile.AvatarFilePath" class="form-control" />
                        <span asp-validation-for="UserProfile.AvatarFilePath" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save changes" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}