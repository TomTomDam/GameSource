@model GameSource.Areas.GameSourceUser.ViewModels.UserProfileViewModel.UserProfileEditViewModel
@using Microsoft.AspNetCore.Identity;
@using GameSource.Models.GameSourceUser;

<div class="col-md-9 float-left" id="userprofile-profilebackground-settings">
    <div class="sub-heading">Profile Background</div>
    <form method="post" asp-action="ProfileBackgroundSettings" class="dialog-form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="UserProfile.ID" />
        <div class="form-group">
            <label asp-for="UserProfile.Biography" class="control-label dialog-label"></label>
            <input asp-for="UserProfile.Biography" class="form-control dialog-input dialog-input-base" />
            <span asp-validation-for="UserProfile.Biography" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save changes" class="btn btn-primary" />
        </div>
    </form>
</div>

@section scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 