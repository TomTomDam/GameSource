@model GameSource.ViewModels.GameSourceUser.UserRoleViewModel.UserRoleIndexViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<div class="container">
    <p>
        <a class="btn btn-primary" asp-action="Create">Create a new User Role</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.UserRoles)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Admin" asp-area="Admin" asp-action="EditUserRole" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-primary" asp-controller="Admin" asp-area="Admin" asp-action="UserRoleDetails" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-primary" asp-controller="Admin" asp-area="Admin" asp-action="DeleteRole" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>