@model GameSource.Models.GameSourceUser.User

@{
    ViewData["Title"] = "Delete User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container delete-page page-content">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="page-heading">Delete User</div>
            <div class="model-heading">@Model.UserName</div>
            <hr />
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-4">
            <p class="text-center">Are you sure you want to delete this User?</p>
        </div>
    </div>
    <form asp-action="Delete">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="row justify-content-center text-left">
            <div class="col-md-2">
                <label asp-for="Id" class="control-label font-weight-bold">ID</label>
            </div>
            <div class="col-md-2">
                <div>@Model.Id</div>
            </div>
        </div>
        <div class="row justify-content-center text-left">
            <div class="col-md-2">
                <label asp-for="UserName" class="control-label font-weight-bold">Username</label>
            </div>
            <div class="col-md-2">
                <div>@Model.UserName</div>
            </div>
        </div>
        <div class="row justify-content-center text-left">
            <div class="col-md-2">
                <label asp-for="Email" class="control-label font-weight-bold"></label>
            </div>
            <div class="col-md-2">
                <div>@Model.Email</div>
            </div>
        </div>
        <div class="row justify-content-center text-left">
            <div class="col-md-2">
                <label asp-for="FirstName" class="control-label font-weight-bold"></label>
            </div>
            <div class="col-md-2">
                <div>@Model.FirstName</div>
            </div>
        </div>
        <div class="row justify-content-center text-left">
            <div class="col-md-2">
                <label asp-for="LastName" class="control-label font-weight-bold"></label>
            </div>
            <div class="col-md-2">
                <div>@Model.LastName</div>
            </div>
        </div>
        <div class="row justify-content-center text-left">
            <div class="col-md-2">
                <label asp-for="Age" class="control-label font-weight-bold"></label>
            </div>
            <div class="col-md-2">
                <div>@Model.Age</div>
            </div>
        </div>
        <div class="row justify-content-center text-left">
            <div class="col-md-2">
                <label asp-for="Location" class="control-label font-weight-bold"></label>
            </div>
            <div class="col-md-2">
                <div>@Model.Location</div>
            </div>
        </div>
        <div class="row justify-content-center text-left">
            <div class="col-md-2">
                <label asp-for="DateCreated" class="control-label font-weight-bold"></label>
            </div>
            <div class="col-md-2">
                <div>@Model.DateCreated</div>
            </div>
        </div>
        <div class="row justify-content-center text-left">
            <div class="col-md-2">
                <label asp-for="UserStatus" class="control-label font-weight-bold"></label>
            </div>
            <div class="col-md-2">
                <div>@Model.UserStatus.Name</div>
            </div>
        </div>
        <div class="row justify-content-center text-left">
            <div class="col-md-2">
                <label asp-for="UserRole" class="control-label font-weight-bold"></label>
            </div>
            <div class="col-md-2">
                <div>@Model.UserRole.Name</div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-4">
                <hr />
                <div class="submit-btn-section">
                    <div class="form-group">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a class="btn btn-primary index-link" asp-action="Index">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>