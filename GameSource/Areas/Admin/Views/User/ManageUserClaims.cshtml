@model GameSource.Areas.Admin.ViewModels.AdminUserViewModel.AdminUserClaimsViewModel

@{
    ViewData["Title"] = "Manage User Claims";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content">
    <div class="row justify-content-center">
        <div class="col-4">
            <h1 class="">Manage User Claims</h1>
            <form asp-action="ManageUserClaims" method="post">
                @for (int i = 0; i < Model.Claims.Count; i++)
                {
                    <div class="form-check m-1">
                        <input type="hidden" asp-for="@Model.Claims[i].ClaimType" />
                        <input asp-for="@Model.Claims[i].IsSelected" class="form-check-input" />
                        <label class="form-check-label" asp-for="@Model.Claims[i].IsSelected">
                            @Model.Claims[i].ClaimType
                        </label>
                    </div>
                }
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="submit-btn-section">
                    <div class="form-group">
                        <input type="submit" value="Save changes" class="btn btn-primary" />
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.ID">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>