@model GameSource.Areas.Admin.ViewModels.AdminUserViewModel.AdminUserClaimsViewModel

@{
    ViewData["Title"] = "Manage User Claims";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Manage User Claims</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-area="Admin" asp-controller="User" asp-action="ManageUserClaims">
            @for (int i = 0; i < Model.Claims.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.Claims[i].ClaimType" />
                    <input asp-for="@Model.Claims[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model.Claims[i].IsSelected">
                        @Model.Claims[i].ClaimType
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>

            <input type="submit" value="Save changes" class="btn btn-primary" />
            <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-primary">Cancel</a>
        </form>
    </div>
</div>