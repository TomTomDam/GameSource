@model GameSource.Areas.Admin.ViewModels.AdminUserViewModel.AdminUserRegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1 class="text-center">Register a new account</h1>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-area="Admin" asp-controller="User" asp-action="Register" method="post" class="dialog-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label dialog-label"></label>
                    <input asp-for="FirstName" class="form-control dialog-input dialog-input-base" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label dialog-label"></label>
                    <input asp-for="LastName" class="form-control dialog-input dialog-input-base" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Username" class="control-label dialog-label"></label>
                    <input asp-for="Username" class="form-control dialog-input dialog-input-base" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label dialog-label"></label>
                    <input asp-for="Password" class="form-control dialog-input dialog-input-base" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="control-label dialog-label"></label>
                    <input asp-for="ConfirmPassword" class="form-control dialog-input dialog-input-base" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label dialog-label"></label>
                    <input asp-for="Email" class="form-control dialog-input dialog-input-base" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Register" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <a asp-area="Admin" asp-controller="User" asp-action="Index">Back to List</a>
    </div>
</div>