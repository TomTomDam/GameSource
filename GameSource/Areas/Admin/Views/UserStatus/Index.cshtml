@model GameSource.Areas.Admin.ViewModels.UserStatusViewModel.AdminUserStatusIndexViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Index</h1>

<div class="container">
    <p>
        <a class="btn btn-primary" asp-area="Admin" asp-controller="UserStatus" asp-action="Create">Create a new User Status</a>
    </p>

    <table class="table text-light">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.UserStatuses)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>
                        <a class="btn btn-primary" asp-area="Admin" asp-controller="UserStatus" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-primary" asp-area="Admin" asp-controller="UserStatus" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-primary" asp-area="Admin" asp-controller="UserStatus" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>