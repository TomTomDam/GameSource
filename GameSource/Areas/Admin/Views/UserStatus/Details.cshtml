@model GameSource.Areas.Admin.ViewModels.UserStatusViewModel.AdminUserStatusDetailsViewModel

@{
    ViewData["Title"] = Model.UserStatus.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="details-page page-content">
    <div class="row justify-content-center">
        <div class="col-4">
            <div class="page-heading">User Status</div>
            <div class="page-sub-heading text-capitalize">@Model.UserStatus.Name</div>
            <hr />
        </div>
    </div>
    <div class="row justify-content-center text-left">
        <div class="col-2">
            <label asp-for="UserStatus.Id" class="control-label font-weight-bold">ID</label>
        </div>
        <div class="col-2">
            <div>@Model.UserStatus.Id</div>
        </div>
    </div>
    <div class="row justify-content-center text-left">
        <div class="col-2">
            <label asp-for="UserStatus.Name" class="control-label font-weight-bold"></label>
        </div>
        <div class="col-2">
            <div>@Model.UserStatus.Name</div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-4">
            <hr />
            <div class="link-section">
                <div class="form-group">
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.UserStatus.Id">Edit</a>
                    <a class="btn btn-primary index-link" asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>