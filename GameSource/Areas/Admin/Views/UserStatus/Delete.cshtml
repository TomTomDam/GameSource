@model GameSource.Areas.Admin.ViewModels.UserStatusViewModel.AdminUserStatusDeleteViewModel

@{
    ViewData["Title"] = "Delete User Status";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container delete-page page-content">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="page-heading">Delete User Status</div>
            <hr />
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-4">
            <p class="text-center">Are you sure you want to delete this User Status?</p>
        </div>
    </div>
    <form asp-action="Delete">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ID" />
        <div class="row justify-content-center text-left">
            <div class="col-md-2">
                <label asp-for="ID" class="control-label font-weight-bold">ID</label>
            </div>
            <div class="col-md-2">
                <div>@Model.ID</div>
            </div>
        </div>
        <div class="row justify-content-center text-left">
            <div class="col-md-2">
                <label asp-for="Name" class="control-label font-weight-bold"></label>
            </div>
            <div class="col-md-2">
                <div>@Model.Name</div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-4">
                <hr />
                <div class="submit-btn-section">
                    <div class="form-group">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a class="btn btn-primary index-link" asp-action="Index">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
